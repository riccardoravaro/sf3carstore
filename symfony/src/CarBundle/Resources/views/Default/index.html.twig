{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }}
    The best cars in the internet!
{% endblock %}
{% block body %}
    <h1>Our offer</h1>
    <div class="pull-right">
    {{ form_start(form, { attr: {class:'form-inline'}})}}
        {{form_widget(form.search, { attr: {placeholder: "Search here"}})}}
        <button type="submit" class="search btn">SUBMIT</button>
         {{form_errors(form.search)}}
    {{ form_end(form)}}

    </div>

    <table class="table">
        <tr>
            <th>Make</th>
            <th>Name</th>
            <th>Year</th>
            <th>Details</th>
        </tr>
        {% for car in cars %}
            <tr>
                <td>{{ car.make.name }}</td>
                <td>{{ car.model.name }}</td>
                <td>{{ car.year | date("m/d/Y", "Europe/Paris") }}</td>
                <td><a href={{ url('show_car', {id: car.id}) }} >Show details</a>
            </tr>
        {% endfor %}
    </table>
{% endblock %}